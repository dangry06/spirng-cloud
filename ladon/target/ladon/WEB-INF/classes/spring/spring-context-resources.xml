<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- properties文件加载 -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" scope="singleton">
		<property name="locations">
			<list>
				<value>classpath*:system.properties</value>
				<value>classpath*:service*.properties</value>
			</list>
		</property>
	</bean>
	
	<!-- ================================================ -->
	<!--      system.properties里配置连接信息	              -->
	<!-- ================================================ -->
	<bean id="dataSource" class="org.logicalcobwebs.proxool.ProxoolDataSource" scope="singleton">
		<property name="driver" value="${mgr.driver}"/>
	    <property name="driverUrl" value="${mgr.driverUrl}"/>  
	    <property name="user" value="${mgr.user}"/>
	    <property name="password" value="${mgr.password}"/>
	    <property name="alias" value="${mgr.alias}"/>
	    <property name="houseKeepingSleepTime" value="${mgr.houseKeepingSleepTime}"/>
	    <property name="prototypeCount" value="${mgr.prototypeCount}"/>
	    <property name="maximumActiveTime" value="${mgr.maximumActiveTime}"/>
	    <property name="maximumConnectionCount" value="${mgr.maximumConnectionCount}"/>
	    <property name="maximumConnectionLifetime" value="${mgr.maximumConnectionLifetime}"/>
	    <property name="minimumConnectionCount" value="${mgr.minimumConnectionCount}"/>
	    <property name="overloadWithoutRefusalLifetime" value="${mgr.overloadWithoutRefusalLifetime}"/>
	    <property name="statisticsLogLevel" value="${mgr.statisticsLogLevel}"/>
	    <property name="trace" value="${mgr.trace}"/>
	    <property name="simultaneousBuildThrottle" value="${mgr.simultaneousBuildThrottle}"/>
	    <property name="verbose" value="${mgr.verbose}"/>
	    <property name="houseKeepingTestSql" value="select now()" /> 
	    <property name="testBeforeUse" value="true" />
    </bean>
    
	<!-- ================================================ -->
	<!--       hibernate sessionfactory                   -->
	<!-- ================================================ -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean" scope="singleton">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocations">
			<list>
				<value>classpath*:**/hibernate_*.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
				<prop key="hibernate.format_sql">${hibernate.format_sql}</prop>
				<prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
				<prop key="hibernate.jdbc.fetch_size">${hibernate.jdbc.fetch_size}</prop>
				<prop key="hibernate.jdbc.batch_size">${hibernate.jdbc.batch_size}</prop>
				<prop key="hibernate.cache.use_second_level_cache">${hibernate.cache.use_second_level_cache}</prop>
				<prop key="hibernate.cache.use_query_cache">${hibernate.cache.use_query_cache}</prop>
				<prop key="hibernate.generate_statistice">${hibernate.generate_statistics}</prop>
				<prop key="hibernate.cache.use_structured_entries">
					${hibernate.cache.use_structured_entries}
				</prop>
				<prop key="hibernate.cache.region.factory_class">
					${hibernate.cache.region.factory_class}
				</prop>
				<!-- prop key="hibernate.connection.provider_class">
					${hibernate.connection.provider_class}
				</prop -->
				<prop key="hibernate.connection.release_mode">
					after_transaction
                </prop>
			</props>
		</property>
	</bean>
	
</beans>